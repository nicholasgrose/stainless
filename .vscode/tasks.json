{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
    },
    "tasks": [
        {
            "label": "stainless: run iron",
            "type": "shell",
            "command": "cargo run --package iron --bin iron",
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/run/iron"
            },
            "detail": "Runs a debug version of iron.",
            "group": "build"
        },
        {
            "label": "stainless: run nickel",
            "type": "shell",
            "command": "cargo run --package nickel --bin nickel",
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/run/nickel"
            },
            "detail": "Runs a debug version of nickel.",
            "group": "build"
        },
        {
            "label": "stainless: build iron",
            "type": "shell",
            "command": "cargo build --package iron --bin iron",
            "problemMatcher": [
                "$rustc"
            ],
            "detail": "Builds a debug version of iron.",
            "group": "build"
        },
        {
            "label": "stainless: build nickel",
            "type": "shell",
            "command": "cargo build --package nickel --bin nickel",
            "problemMatcher": [
                "$rustc"
            ],
            "detail": "Builds a debug version of nickel.",
            "group": "build"
        },
        {
            "label": "stainless: build all",
            "type": "shell",
            "command": "cargo build --all",
            "problemMatcher": [],
            "detail": "Builds debug versions of all packages.",
            "group": "build"
        },
        {
            "label": "stainless: update iron",
            "type": "shell",
            "command": "cargo update --package iron",
            "problemMatcher": [],
            "detail": "Updates all dependencies of iron in Cargo.lock.",
            "group": "none"
        },
        {
            "label": "stainless: upgrade iron",
            "type": "shell",
            "command": "cargo upgrade --package iron --to-lockfile",
            "problemMatcher": [],
            "dependsOn": [
                "stainless: update iron"
            ],
            "dependsOrder": "sequence",
            "detail": "Upgrades all dependencies of iron in Cargo.toml.",
            "group": "none"
        },
        {
            "label": "stainless: update nickel",
            "type": "shell",
            "command": "cargo update --package nickel",
            "problemMatcher": [],
            "detail": "Updates all dependencies of nickel in Cargo.lock.",
            "group": "none"
        },
        {
            "label": "stainless: upgrade nickel",
            "type": "shell",
            "command": "cargo upgrade --package nickel --to-lockfile",
            "problemMatcher": [],
            "dependsOn": [
                "stainless: update nickel"
            ],
            "dependsOrder": "sequence",
            "detail": "Upgrades all dependencies of nickel in Cargo.toml.",
            "group": "none"
        },
        {
            "label": "stainless: update all",
            "type": "shell",
            "command": "cargo update --workspace",
            "problemMatcher": [],
            "detail": "Updates all dependencies in Cargo.lock.",
            "group": "none"
        },
        {
            "label": "stainless: upgrade all",
            "type": "shell",
            "command": "cargo upgrade --workspace",
            "problemMatcher": [],
            "dependsOn": [
                "stainless: update all"
            ],
            "dependsOrder": "sequence",
            "detail": "Upgrades all dependencies in all Cargo.toml files.",
            "group": "none"
        },
        {
            "label": "stainless: format iron",
            "type": "shell",
            "command": "cargo fmt --package iron",
            "problemMatcher": [],
            "detail": "Formats iron.",
            "group": "none"
        },
        {
            "label": "stainless: check iron",
            "type": "shell",
            "command": "cargo clippy --package iron",
            "problemMatcher": [
                "$rustc"
            ],
            "dependsOn": [
                "stainless: format iron"
            ],
            "dependsOrder": "sequence",
            "detail": "Lints iron.",
            "group": "none"
        },
        {
            "label": "stainless: format nickel",
            "type": "shell",
            "problemMatcher": [],
            "command": "cargo fmt --package nickel",
            "detail": "Formats nickel.",
            "group": "none"
        },
        {
            "label": "stainless: check nickel",
            "type": "shell",
            "command": "cargo clippy --package nickel",
            "problemMatcher": [
                "$rustc"
            ],
            "dependsOn": [
                "stainless: format nickel"
            ],
            "dependsOrder": "sequence",
            "detail": "Lints nickel.",
            "group": "none"
        },
        {
            "label": "stainless: format all",
            "type": "shell",
            "command": "cargo fmt --all",
            "problemMatcher": [],
            "detail": "Formats nickel.",
            "group": "none"
        },
        {
            "label": "stainless: check all",
            "type": "shell",
            "command": "cargo clippy --all",
            "problemMatcher": [
                "$rustc"
            ],
            "dependsOn": [
                "stainless: format all"
            ],
            "dependsOrder": "sequence",
            "detail": "Lints all packages.",
            "group": "none"
        },
    ]
}